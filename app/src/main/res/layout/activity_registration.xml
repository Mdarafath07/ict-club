<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Registration Form"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Personal info" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="3dp"
            android:background="#5676"
            android:hint="Enter Name.."
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/userPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#5676"
            android:hint="Father Name..."
            android:inputType="textPassword"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#5676"
            android:hint="Mother Name..."
            android:inputType="textPassword"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <EditText

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#5676"
            android:hint="Enter address..."
            android:inputType="textPassword"
            android:textSize="20dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/userContact"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#5676"
            android:hint="Enter Contact No.."
            android:inputType="number"

            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#5676"
            android:hint="Whatsapp no..."
            android:inputType="number"

            android:textSize="20dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#5676"
            android:hint="Guardian's Contact number"
            android:inputType="number"

            android:textSize="20dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#5676"
            android:hint="Facebook Link"
            android:textSize="20dp" />

    </LinearLayout>






    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="35dp"
            android:text="Gender"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/Male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Male"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/Female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Female"
            android:textSize="20dp" />
    </RadioGroup>
    <View
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:background="#ACA1A1" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Educational info" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#5676"
            android:hint="Department"
            android:inputType="number"

            android:textSize="20dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#5676"
            android:hint="Roll No."
            android:inputType="number"

            android:textSize="20dp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#5676"
            android:hint="Registration No."
            android:inputType="number"

            android:textSize="20dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#5676"
            android:hint="Semester"
            android:inputType="number"

            android:textSize="20dp" />

    </LinearLayout>
    <View
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:background="#ACA1A1" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course info" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="53dp"
                android:layout_gravity="center"

                android:text="What subject are you interested \nin taking a course on?"
                android:textSize="16dp"
                android:textStyle="bold" />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <CheckBox
                android:id="@+id/office1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Office Application"
                android:textSize="14dp" />

            <CheckBox
                android:gravity="start"
                android:layout_weight="1"
                android:id="@+id/graphics1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Graphics Design"
                android:textSize="14dp" />

            <CheckBox
                android:gravity="start"
                android:layout_weight="1"
                android:id="@+id/webDev1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Web Development"
                android:textSize="14dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
            <CheckBox
                android:id="@+id/AppsDev1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Apps Development"
                android:textSize="14dp"
                android:gravity="start"/>

            <CheckBox
                android:gravity="start"
                android:layout_weight="1"
                android:id="@+id/ITSupport1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="IT Support"
                android:textSize="14dp" />

            <CheckBox
                android:gravity="start"
                android:layout_weight="1"
                android:id="@+id/Program1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Programming Language"
                android:textSize="14dp" />

        </LinearLayout>


    </RadioGroup>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="53dp"
                android:layout_gravity="center"

                android:text="Have you had any previous experience?"
                android:textSize="16dp"
                android:textStyle="bold" />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <CheckBox
                android:id="@+id/office"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Office Application"
                android:textSize="14dp" />

            <CheckBox
                android:gravity="start"
                android:layout_weight="1"
                android:id="@+id/graphics"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Graphics Design"
                android:textSize="14dp" />

            <CheckBox
                android:gravity="start"
                android:layout_weight="1"
                android:id="@+id/webDev"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Web Development"
                android:textSize="14dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
            <CheckBox
                android:id="@+id/AppsDev"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Apps Development"
                android:textSize="14dp"
                android:gravity="start"/>

            <CheckBox
                android:gravity="start"
                android:layout_weight="1"
                android:id="@+id/ITSupport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="IT Support"
                android:textSize="14dp" />

            <CheckBox
                android:gravity="start"
                android:layout_weight="1"
                android:id="@+id/Program"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Programming Language"
                android:textSize="14dp" />

        </LinearLayout>


    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Country"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/SpCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#B71C1C"
        android:text="Click To Submit"
        android:textColor="#F5FBF6" />

</LinearLayout>
